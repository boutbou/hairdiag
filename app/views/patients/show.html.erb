<!-- Cette show est la show lorsque le patient clique sur le lien lui permettant d'accéder à son cas-->


  <div class="container-view">
    <div class="col-md-2 view-side-bar">
      <div class="row" style="background: #62E1A6; background-image: linear-gradient(-180deg, rgba(42,245,152,0.00) 0%, rgba(0,0,0,0.50) 100%);">
        <div>
          <%= link_to root_path, id: "logo" do %>
          <%= image_tag "logo_white.png" %>
          <% end %>
        </div>
        <div class="menu">
          <div>
            <%= link_to doctor_dashboard_path, class: "text-icon" do %>
            <%= image_tag "icon-traiter.png" %>
            <p>Mes recommandations personnalisées</p>
            <% end %>
          </div>
          <div>
            <%= link_to doctor_history_path, class: "text-icon" do %>
            <%= image_tag "icon-historic.png" %>
            <p>Ma fiche patient</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-10">
      <div class="row">
        <div>
          <div>
            <%= @patient.first_name %>, le docteur  a traité votre cas.
          </div>
          <div class="message2">

          </div>
          <div class="message-recommandation">

          </div>
        </div>
      </div>
    </div>
  </div>

