<div class="container" id="form-width">
  <div class="row">
    <div class="col-xs-6 page-part">
      <div class="side-background" style="background: #62E1A6; background-image: linear-gradient(-180deg, rgba(42,245,152,0.00) 0%, rgba(0,0,0,0.50) 100%), url('<%= image_url "background.png" %>');">
        <div>
          <%= link_to root_path, id: "logo" do %>
          <%= image_tag "logo_white.png" %>
          <% end %>
        </div>

          <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
              <div class="message">
                <div class="numbers active">
                  <h3>1</h3>
                </div>
                <div class="message-body">
                  <p>Remplis les cases crâne d'oeuf !</p>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
              <div class="message">
                <div class="numbers">
                  <h3>2</h3>
                </div>
                <div class="message-body">
                  <p>On veut ta photo !</p>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
              <div class="message">
                <div class="numbers">
                  <h3>3</h3>
                </div>
                <div class="message-body">
                  <p>Are you reeeeeaaaadyyyyy ??</p>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
              <div class="message">
                <div class="numbers">
                  <h3>4</h3>
                </div>
                <div class="message-body">
                  <p>Give us $$$, shitty bold !</p>
                </div>
              </div>
            </div>
          </div>
        <div class="center_bottom_page">
          <div class="cta-start btn btn-medium">
            <%= link_to "Retour à l'accueil", root_path, class: "header-item" %>
          </div>
        </div>

      </div>
    </div>
    <div class="col-xs-6 page-part" id="col-form">
      <%= simple_form_for @patient, html: {id: "patient-form"} do |f| %>
      <fieldset>
        <%= f.input :first_name, input_html: { "cf-questions" => "Quel est ton nom ?"} %>
      </fieldset>

      <fieldset>
        <%= f.input :last_name , input_html: { "cf-questions" => "Quel est ton prénom ?"}%>
      </fieldset>

      <fieldset>
        <%= f.input :gender, as: :radio_buttons, collection: Patient.genders, input_html: { "cf-questions" => "Es tu une femme ou un homme ?"} %>
        <%= f.button :submit %>
      </fieldset>

      <fieldset>
        <%= f.input :loss_start_date , input_html: { "cf-questions" => "A quand remonte le début de votre perte de cheveux ?"}%>
      </fieldset>

      <fieldset>
        <%= f.input :relative, collection: Patient.relatives , input_html: { "cf-questions" => " Quel membre de votre famille semble avoir le même problème ?"}%>
      </fieldset>

      <% end %>
    </div>
  </div>
</div>

